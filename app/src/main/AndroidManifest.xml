<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hotel_customer_v1_0_0"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".view.account.CreateCustomerActivity"
            android:exported="false" />
        <activity
            android:name=".view.account.EditAccountActivity"
            android:exported="true" />
        <activity
            android:name=".view.account.EditAvatarActivity"
            android:exported="true" />
        <activity
            android:name=".view.booking.QRCodeBookingActivity"
            android:exported="true" />
        <activity
            android:name=".view.booking.BookingActivity"
            android:exported="true" />
        <activity
            android:name=".view.account.ProfileActivity"
            android:exported="true" />
        <activity
            android:name=".view.booking.BookingHistoryActivity"
            android:exported="true" />
        <activity
            android:name=".view.booking.InfoBookingActivity"
            android:exported="true" />
        <activity
            android:name=".view.booking.ChooseBookingActivity"
            android:exported="true" />
        <activity
            android:name=".view.hotel.HotelActivity"
            android:exported="true" />
        <activity
            android:name=".view.hotel.HotelListActivity"
            android:exported="true" />
        <activity
            android:name=".view.account.SigninActivity"
            android:exported="true" />
        <activity
            android:name=".view.account.SignupActivity"
            android:exported="true" />
        <activity
            android:name=".view.hotel.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".view.UserActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>